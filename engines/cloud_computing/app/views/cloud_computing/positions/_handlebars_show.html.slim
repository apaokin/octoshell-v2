div.position position-id='{{id}}'
  h3.position-name
    | {{item_name}} No.{{id}}

  input[type="hidden" value="{{id}}" name="request[positions_attributes][{{id}}][id]"
        id="request_positions_attributes_{{id}}_id"]
  label.control-label style="padding-right:5%"
    = t('.amount')
  /= ff.number_field :amount, required: true


  input[required="required" type="number" value="{{amount}}"
    name="request[positions_attributes][{{id}}][amount]"
    id="request_positions_attributes_{{id}}_amount"
    style="width:60px;text-align:center;"]

  a.fa.fa-times.text-danger style="padding-left:5%;"
    = t('.remove_position')
  = select_tag "to_item_kinds",'',  style: 'width: 100%;', include_blank: true, 'position-id': '{{id}}' 
